{
  "name": "meleelight",
  "version": "0.0.1",
  "description": "Melee Light Platform Fighter",
  "main": "app.js",
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 webpack --progress --config=bin/webpack/build.config.js",
    "comp": "nodemon npx tsc",
    "flow": "flow status src; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint .",
    "dev": "cross-env FORCE_COLOR=1 webpack --progress --watch --config=bin/webpack/dev.config.js",
    "animations": "cross-env FORCE_COLOR=1 webpack --progress --config=bin/webpack/animations.config.js",
    "release": "node bin/release.js",
    "serve": "node app",
    "postinstall": "npm run animations && npm run build",
    "rebuild": "./node_modules/.bin/electron-rebuild -w uws"
  },
  "engines": {
    "node": "16.17.0",
    "npm": "8.15.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schmooblidon/meleelight.git"
  },
  "keywords": [
    "melee"
  ],
